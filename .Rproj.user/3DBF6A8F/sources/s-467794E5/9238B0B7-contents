      data = eos, value = "Innvilget.beløp",
      joinBy = c("name", "Fylkesnavn"), name = "Tildelt", # @todo: lage variabel i tilsagn som tilsvarer hc-a2
      dataLabels = list(enabled = TRUE, format = "{point.name}"),
